<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% postsArray.forEach(function(posts) {  %>

  <h1> <%=posts.title %> </h1>
<%  var text_truncate= function(str){ %>
<%     var length=100;  %>
<%     var ending="..."; %>
<%     if(str.length>length){  %>
<%       return str.substring(0,length-ending.length)+ending; %>
<%     } else{  %>
<%       return str; %>
<%     } %>
<%  }  %>

<%  var cont=text_truncate(posts.content); %>

  <p><%=  cont %>
    <a href="posts/<%=posts.title %>" >Read More</a>
  </p>


<% }); %>



<%- include("partials/footer") -%>
